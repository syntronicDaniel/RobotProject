<?xml version="1.0?>
<robot name="LittleCar">
	
	<!-- Base Link (Chassi) -->
	<link name="base_link">
		<visual>
			<geometry>
				<box size="0.5 0.3 0.1"/> <!-- Size of the Chassi -->
			</geometry>
			
			<material name="blue"/>
		</visual>
		
		<collision>
			<geometry>
				<box size="0.5 0.3 0.1"/>
			</geometry>
		</collision>
	</link>

	
	<!-- Wheels -->
	<link name="front_left_wheel">
		<visual>
			<geometry>
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
			
			<material name="black"/>
		</visual>
		
		<collision>
			<geometry>	
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
		</collision>
	</link>
	

	<link name="front_right_wheel">
		<visual>
			<geometry>
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
			
			<material name="black"/>
		</visual>
		
		<collision>
			<geometry>	
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
		</collision>
	</link>
	
	

	<link name="rear_right_wheel">
		<visual>
			<geometry>
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
			
			<material name="black"/>
		</visual>
		
		<collision>
			<geometry>	
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
		</collision>
	</link>

	<link name="rear_left_wheel">
		<visual>
			<geometry>
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
			
			<material name="black"/>
		</visual>
		
		<collision>
			<geometry>	
				<cylinder radius="0.05" length="0.05"/> 
			</geometry>
		</collision>
	</link>

</robot>
